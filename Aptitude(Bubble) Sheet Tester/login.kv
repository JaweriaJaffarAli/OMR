<Answer>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: '11.jpg'
    BoxLayout:
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50
        BoxLayout:
            orientation: 'horizontal'
            padding: [50, 0 , 50, 0]
            Label:
                markup: True
                text: '[size=18][b]Enter Roll Number[/b][/size]'
                align: 'left'
            TextInput:
                size_hint_x: 2
                id: rollNo
                multiline:False
                font_size: 18
            Button:
                markup: True
                text: '[size=16][b]Enter[/b][/size]'
                background_color: 1.0 , 0.0, 0.0, 1.0
                on_press: root.EnterRollNo(rollNo.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 5
            padding: [50,20,50,20]
            spacing: 40
            Button:
                markup: True
                text: '[size=16][b]Import from device[/b][/size]'
                background_color: .1 , 1, 1, 1
                on_press: root.Check_RollNumber()
            Button:
                markup: True
                text: '[size=16][b]Take a Picture[/b][/size]'
                background_color: .1 , 1, 1, 1
            Button:
                markup: True
                text: '[size=16][b]Back[/b][/size]'
                background_color: .1 , 1, 1, 1
                on_press: root.manager.current = 'connected'
        BoxLayout:
            padding: [300 , 0, 300, 0]
            Button:
                markup: True
                text: '[size=16][b]Exit[/b][/size]'
                background_color: 1.0 , 0.0, 0.0, 1.0
                on_press: root.dismiss()

<Result>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: '11.jpg'
    BoxLayout:
        orientation: 'vertical'
        padding: [10,10,10,10]
        spacing: 10
        BoxLayout:
            padding: [10,10,10,10]
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    markup: True
                    text: '[size=18][b]Roll Number[/b][/size]'
                Label:
                    id: rollno
                    text: " "
                    font_size: 18
            BoxLayout:
                orientation: 'vertical'
                Label:
                    markup: True
                    text: '[size=18][b]Marks[/b][/size]'
                Label:
                    id: Score
                    text: " "
                    font_size: 18
            BoxLayout:
                Image:
                    id: Pimage
                    source: ""

        BoxLayout:
            size_hint_y: .5
            padding: [100, 50,100,10]
            orientation: 'vertical'
            spacing: 20
            BoxLayout:

                Button:
                    background_color: .1 , 1, 1, 1
                    markup: True
                    text: '[size=16][b]Show Result[/b][/size]'
                    on_press: root.ShowPaper()
            BoxLayout:
                padding: [200, 2,200,2]
                Button:
                    markup: True
                    text: '[size=16][b]Back[/b][/size]'
                    background_color: .1 , 1, 1, 1
                    on_press: root.manager.current ='connected'


<ImportFile>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: '11.jpg'
    BoxLayout:
        padding: [20,30,20,30]
        spacing: 50
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 5
            orientation: 'horizontal'
            FileChooserListView:
                id: filechooser
                on_selection: root.selected(filechooser.selection)
            Image:
                id: image
                source: ""

        BoxLayout:
            spacing: 10
            orientation: 'horizontal'
            size_hint: 1 , 1
            Button:
                markup: True
                text: '[size=16][b]Back[/b][/size]'
                size_hint: .7 , .7
                background_color: .1 , 1, 1, 1
                on_press: root.manager.current = 'reference'
            Button:
                markup: True
                text: '[size=16][b]Open[/b][/size]'
                size_hint: .7 , .7
                background_color: .1 , 1, 1, 1
                on_press: root.open(filechooser.selection , filechooser.path)

