<Login>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: '11.jpg'
    BoxLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [200,50,200,50]
        spacing: 40

        Label:
            markup: True
            text: '[anchor=title][size=30][b]WELCOME[/b][/size]'


        BoxLayout:
            orientation: 'vertical'

            Label:
                markup: True
                text: '[size=20][b]UserID[/b][/size]'
                text_size: root.width-400, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28


        BoxLayout:
            orientation: 'vertical'
            Label:
                markup: True
                text: '[size=20][b]Password[/b][/size]'
                text_size: root.width-400, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28
        BoxLayout:
            padding: [100, 0, 100, 10]
            Button:
                text: 'Login'
                font_size: 24
                size_hint: .4 , .6
                background_color: .1 , 1, 1, 1
                align: 'center'
                on_press: root.do_login(login.text, password.text)

<Connected>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: '11.jpg'
    BoxLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [80,50,80,50]
        spacing: 40

        Label:
            markup: True
            text: '[anchor=title][size=30][b]Aptitude Checker [/b][/size]'


        Button:

            markup: True
            text: '[size=16][b]Add Reference Sheet[/b][/size]'
            background_color: .1 , 1, 1, 1
            on_press: root.manager.current ='reference'

        Button:
            markup: True
            text: '[size=16][b]Add Answer Sheet[/b][/size]'
            background_color: .1 , 1, 1, 1
            on_press: root.CheckRefSheet()

        Button:
            markup: True
            text: '[size=16][b]View Result[/b][/size]'
            background_color: .1 , 1, 1, 1
            on_press: root.manager.current = 'result'

        Button:
            markup: True
            text: '[size=16][b]Logout[/b][/size]'
            background_color: .1 , 1, 1, 1
            on_press: root.disconnect()

        BoxLayout:
            padding: [250 , 0, 250, 0]
            Button:
                markup: True
                text: '[size=16][b]Exit[/b][/size]'
                background_color: 1.0 , 0.0, 0.0, 1.0
                on_press: root.dismiss()

