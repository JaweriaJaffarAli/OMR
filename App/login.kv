<Login>:
    BoxLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50


        Label:
            text: 'Welcome'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Login'
                font_size: 18
                align: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28


        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                align: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28

        Button:
            text: 'Login'
            font_size: 24

            on_press: root.do_login(login.text, password.text)

<Connected>:
    BoxLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Welcome'
            font_size: 32

        Button:
            text: 'capture reference sheet'
            on_press: root.manager.current ='reference'
        Button:
            text: 'capture answer sheet'
            on_press: root.manager.current = 'answer'
        Button:
            text: 'view result'
            on_press: root.manager.current = 'result'
        Button:
            text: 'Quit'
            on_press: root.dismiss()

<Reference>:
    BoxLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Button:
            text: 'Import from device'
            on_press: root.manager.current = 'importfile'
        Button:
            text: 'Take a Picture'

        Button:
            text: 'Quit'
            on_press: root.dismiss()
<Answer>:
    BoxLayout:
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50
        BoxLayout:
            orientation: 'horizontal'

            Label:
                text: 'Enter Roll Number'
                font_size: 18
                align: 'left'
            TextInput:
                id: rollNo
                multiline:False
                font_size: 28
            Button:
                text: 'Enter'
                on_press: root.EnterRollNo(rollNo.text)
        Button:
            text: 'Import from device'
            on_press: root.manager.current = 'importfile2'
        Button:
            text: 'Take a Picture'


        Button:
            text: 'Quit'
            on_press: root.dismiss()
<Result>:
    BoxLayout:
        orientation: 'vertical'
        padding: [10,10,10,10]
        spacing: 10
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Roll Number'
                Label:
                    id: rollno
                    text: " "
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Marks'
                Label:
                    id: Score
                    text: " "
            BoxLayout:
                Image:
                    id: Pimage
                    source: ""

        BoxLayout:
            padding: [10,50,10,50]
            spacing: 50
            Button:
                text: 'Show Paper'
                on_press: root.ShowPaper()


<ImportFile>:
    BoxLayout:
        padding: [10,50,10,50]
        spacing: 50
        Button:
            text: "open"
            on_press: root.open(filechooser.selection , filechooser.path)
        FileChooserListView:
            id: filechooser
            on_selection: root.selected(filechooser.selection)
        Image:
            id: image
            source: ""

